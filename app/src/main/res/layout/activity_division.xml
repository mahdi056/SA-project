<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Division">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a division"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/btn_chittagong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Chittagong" />

    <Button
        android:id="@+id/btn_sylhet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Sylhet"/>

    <Button
        android:id="@+id/btn_dhaka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Dhaka"/>

    <Button
        android:id="@+id/btn_khulna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Khulna" />

    <Button
        android:id="@+id/btn_rajshahi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Rajshahi"/>

    <Button
        android:id="@+id/btn_barisal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Barisal"/>

    <Button
        android:id="@+id/btn_ragpur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Rangpur"/>

    <Button
        android:id="@+id/btn_mymensingh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/darkblue"
        android:text="Mymensingh"/>


</LinearLayout>